<div class="container d-flex justify-content-center">
    <div class="card" style="max-width: 35%">
        <div class="card-header">
            <h1 class="form-text">Sing up</h1>
        </div>
        <div class="card-body">
            <form class="row" asp-action="DefaultSignUp" asp-controller="authentication">
                <h5 class="form-text mt-1">Login</h5>
                <input type="text" name="username" class="form-control mb-1" />
                
                <h5 class="form-text mt-1">Password</h5>
                <input type="password" name="password" class="form-control mb-1" />

                <input type="submit" class="btn btn-success mt-1 mb-1" value="Sign up" />
            </form>
        </div>
        <div class="card-footer">
            <div class="row">
                <label class="form-text">Continue with:</label>
                <form class="col" asp-action="ExternalLogin" asp-controller="authentication">
                    <input type="submit" class="btn btn-secondary" name="provider" value="Google" />
                </form>
                <form class="col" asp-action="ExternalLogin" asp-controller="authentication">
                    <input type="submit" class="btn btn-secondary float-end" value="Facebook" />
                </form>
            </div>
        </div>
    </div>
</div>